<resources>

    <color name="primary_text">#ffffff</color>
    <color name="accent">#00acc1</color>
    <color name="actionbar_bg">#006064</color>
    <color name="actionbar_dark_bg">#00838f</color>
    <color name="text_numbers">#e64a19</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowFullscreen">true</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/actionbar_bg</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/actionbar_dark_bg</item>

        <!-- colorAccent is used as the default value for colorControlActivated, which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:navigationBarColor">@color/actionbar_bg</item>
    </style>
    <style name="LastUpdated">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#BFC7C9</item>
        <item name="android:paddingBottom">10sp</item>
    </style>

    <!-- ICON -->
    <style name="IconWeather">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">30sp</item>
        <item name="weatherIconSize">50</item>
        <item name="android:gravity">center</item>
        <item name="android:width">60sp</item>

    </style>
    <style name="IconNumber">
        <item name="android:textColor">@color/text_numbers</item>
        <item name="android:textSize">44sp</item>
    </style>

    <!-- DETAIL -->
    <style name="IconWeather.Detail" parent="IconWeather">
        <item name="weatherIconSize">70</item>
        <item name="android:width">76sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="IconNumber.Detail" parent="IconNumber">
        <item name="android:textSize">56sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="IconWeather.MinMax" parent="IconWeather">
        <item name="weatherIconSize">20</item>
        <item name="android:width">8sp</item>
        <item name="android:height">26sp</item>

        <item name="android:layout_marginRight">3sp</item>
        <item name="android:layout_marginLeft">0sp</item>
    </style>


    <style name="MainNumber">
        <item name="android:textSize">95sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_numbers</item>
    </style>

    <style name="MainNumberBarometer" parent="MainNumber">
        <item name="android:textSize">83sp</item>

    </style>


    <style name="SummaryHorizontalRule">
        <item name="android:background">#BFC7C9</item>
        <item name="android:layout_height">0sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:layout_marginBottom">16sp</item>
    </style>
    <style name="DetailHorizontalRule" parent="SummaryHorizontalRule">
        <item name="android:layout_height">1sp</item>
    </style>


    <style name="DetailHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_numbers</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>
    <style name="DetailLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginRight">1sp</item>
    </style>
    <style name="DetailValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>

</resources>
