<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView android:id="@+id/last_updated" android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/LastUpdated" android:text="@string/default_value" />

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/SummaryLabel" android:text="@string/temperature" />

        <TextView android:id="@+id/summary_temperature" android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/SummaryNumber" android:text="@string/default_value" />

        <View style="@style/DetailHorizontalRule"/>

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/SummaryLabel" android:text="@string/wind" />

        <TextView android:id="@+id/summary_wind" android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/SummaryNumber" android:text="@string/default_value" />

        <View style="@style/DetailHorizontalRule"/>

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/SummaryLabel" android:text="@string/humidity" />

        <TextView android:id="@+id/summary_humidity" android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/SummaryNumber" android:text="@string/default_value" />

        <View style="@style/DetailHorizontalRule"/>

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/SummaryLabel" android:text="@string/rain" />

        <TextView android:id="@+id/summary_rain" android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/SummaryNumber" android:text="@string/default_value" />

        <View style="@style/DetailHorizontalRule"/>

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/SummaryLabel" android:text="@string/barometer" />

        <TextView android:id="@+id/summary_barometer" android:layout_width="fill_parent"
            android:layout_height="wrap_content" style="@style/SummaryNumber" android:text="@string/default_value" />














    </LinearLayout>
</ScrollView>
</RelativeLayout>
