<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--Wind-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <com.github.pwittchen.weathericonview.WeatherIconView
                android:id="@+id/wind_icon_detail"
                custom:weatherIconResource="@string/wi_wind_direction"
                custom:weatherIconColor="@color/text_numbers"
                style="@style/IconWeather.Detail"
                />

            <TextView android:id="@+id/wind_current" android:layout_width="fill_parent"
                android:layout_height="wrap_content" style="@style/IconNumber.Detail" android:text="@string/default_value" />

        </LinearLayout>



        <!--DAY-->
        <TextView
            style="@style/DetailHeader"
            android:text="@string/daily_stats"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/DetailLabel"
                android:text="@string/average"
                />
            <TextView
                style="@style/DetailValue"
                android:id="@+id/wind_day_average"
                android:text="@string/default_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.github.pwittchen.weathericonview.WeatherIconView
                android:id="@+id/my_weather_icon1"
                custom:weatherIconResource="@string/wi_direction_up"
                style="@style/IconWeather.MinMax"
                />
            <TextView
                style="@style/DetailValue"
                android:id="@+id/wind_day_max"
                android:text="@string/default_value"/>
        </LinearLayout>

        <!--WEEK-->
        <TextView
            style="@style/DetailHeader"
            android:text="@string/weekly_stats"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/DetailLabel"
                android:text="@string/average"
                />
            <TextView
                style="@style/DetailValue"
                android:id="@+id/wind_week_average"
                android:text="@string/default_value"/>
        </LinearLayout>

        <!--MONTH-->
        <TextView
            style="@style/DetailHeader"
            android:text="@string/monthly_stats"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/DetailLabel"
                android:text="@string/average"
                />
            <TextView
                style="@style/DetailValue"
                android:id="@+id/wind_month_average"
                android:text="@string/default_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.github.pwittchen.weathericonview.WeatherIconView
                android:id="@+id/my_weather_iconmmax"
                custom:weatherIconResource="@string/wi_direction_up"
                style="@style/IconWeather.MinMax"
                />
            <TextView
                style="@style/DetailValue"
                android:id="@+id/wind_month_max"
                android:text="@string/default_value"/>
        </LinearLayout>

        <!--YEAR-->
        <TextView
            style="@style/DetailHeader"
            android:text="@string/yearly_stats"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/DetailLabel"
                android:text="@string/average"
                />
            <TextView
                style="@style/DetailValue"
                android:id="@+id/wind_year_average"
                android:text="@string/default_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.github.pwittchen.weathericonview.WeatherIconView
                android:id="@+id/my_weather_iconymax"
                custom:weatherIconResource="@string/wi_direction_up"
                style="@style/IconWeather.MinMax"
                />
            <TextView
                style="@style/DetailValue"
                android:id="@+id/wind_year_max"
                android:text="@string/default_value"/>
        </LinearLayout>

        <!--TOTAL-->
        <TextView
            style="@style/DetailHeader"
            android:text="@string/total_stats"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/DetailLabel"
                android:text="@string/average"
                />
            <TextView
                style="@style/DetailValue"
                android:id="@+id/wind_total_average"
                android:text="@string/default_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.github.pwittchen.weathericonview.WeatherIconView
                android:id="@+id/my_weather_icontmax"
                custom:weatherIconResource="@string/wi_direction_up"
                style="@style/IconWeather.MinMax"
                />
            <TextView
                style="@style/DetailValue"
                android:id="@+id/wind_total_max"
                android:text="@string/default_value"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
</RelativeLayout>
